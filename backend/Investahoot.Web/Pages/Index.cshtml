@page
@model IndexModel
@{
    Layout = "";
    ViewData["Title"] = "Home page";
}

<html>
<head>
    <link rel="stylesheet" href="~/css/game.css" asp-append-version="true" />
</head>
<body>
    <h1>InvestaHOOT</h1>

    <div id="loginPanel">
        <input type="text" id="nameField" placeholder="What's your name?" /><br />
        <button id="loginButton">Play!</button>
    </div>

    <div id="lobbyPanel">
        <h3>Waiting for the game to start!</h3>

        <h4>Your opponents</h4>
        <div id="lobbyPlayerList"></div>
    </div>

    <div id="questionPanel">
        <h2>What's your answer?</h2>
        <div id="answerButtonPanel">
        </div>
        <div><span id="timeLabel"></span> seconds left</div>
    </div>

    <div id="roundFinishedPanel">
        <h2>Round over!</h2>

        <div>Your answer was</div>
        <div id="correctAnswerPanel" style="animation-name: pulse; animation-duration: 3s; animation-iteration-count: infinite; animation-direction: alternate;">
            CORRECT!
        </div>
        <div id="incorrectAnswerPanel">
            INCORRECT!
        </div>
        You got <span id="pointsLabel"></span> points. You are now in spot <span id="rankingLabel"></span>
    </div>

    <div id="scorePanel">
        <h2>Scores</h2>
        <div>That's all folks!</div>
        <ol id="playerScoresPanel">
        </ol>
    </div>

    <script type="module" src="~/js/game.js" type="text/javascript"></script>
</body>
</html>